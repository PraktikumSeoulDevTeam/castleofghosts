{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
  },
  "include": [
    "src",
    "typings/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "**/*.js"
  ]
}