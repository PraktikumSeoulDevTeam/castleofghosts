{
  "name": "castleofghosts",
  "version": "0.0.0",
  "description": "Браузерная игра",
  "repository": "https://github.com/PraktikumSeoulDevTeam/castleofghosts.git",
  "author": "Artyom Mozgovoy, Dmitry Kuznetsov, Nikita Ivanov",
  "license": "MIT",
  "scripts": {
    "start": "run-s app:build server:build server:run",
    "app:serve": "webpack serve -c ./app/webpack.config.js --mode development --watch",
    "app:build": "webpack -c ./app/webpack.config.js --mode production",
    "lint:verify": "eslint --max-warnings=0 \"**/*\"",
    "lint:fix": "eslint --fix \"**/*\"",
    "slint:verify": "stylelint --max-warnings=0 \"app/src/**/*.scss\"",
    "slint:fix": "stylelint --fix \"app/src/**/*.scss\"",
    "server:build": "run-s server:clear server:ts:compile",
    "server:serve": "run-p server:ts:watch server:nodemon",
    "server:ts:compile": "tsc -p server",
    "server:ts:watch": "tsc -p server -w",
    "server:nodemon": "nodemon dist/server.js",
    "server:run": "node dist/server.js",
    "server:clear": "rimraf ./dist/server.js",
    "docker:build": "docker build --tag castleofghosts .",
    "docker:run": "docker run -p 3000:3000 castleofghosts",
    "docker:heroku": "run-s docker:heroku:push docker:heroku:release",
    "docker:heroku:push": "heroku container:push web",
    "docker:heroku:release": "heroku container:release web",
    "yarn:check": "yarn check --integrity"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint:verify slint:verify yarn:check"
    }
  },
  "nodemonConfig": {
    "watch": [
      "dist/server.js"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "axios": "0.21.0",
    "express": "4.17.1",
    "lodash": "4.17.20",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-redux": "7.2.2",
    "react-router-dom": "5.2.0",
    "redux": "4.0.5",
    "redux-saga": "1.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@types/lodash": "4.14.165",
    "@types/react": "16.9.55",
    "@types/react-dom": "16.9.9",
    "@types/react-redux": "7.1.11",
    "@types/react-router-dom": "5.1.6",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "babel-loader": "8.1.0",
    "babel-plugin-const-enum": "1.0.1",
    "css-loader": "5.0.0",
    "eslint": "7.12.1",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.0",
    "mini-css-extract-plugin": "1.2.1",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "sass": "1.28.0",
    "sass-loader": "10.0.5",
    "style-loader": "2.0.0",
    "stylelint": "13.7.2",
    "stylelint-config-idiomatic-order": "8.1.0",
    "typescript": "4.0.5",
    "webpack": "5.4.0",
    "webpack-cli": "4.1.0",
    "webpack-dev-server": "3.11.0"
  }
}
